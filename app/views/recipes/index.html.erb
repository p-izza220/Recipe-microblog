<div class="container-fluid">
	<div class="row">
		<% @recipes.each do |recipe| %>
		<div class="col-md-4 col-lg-3" id="recipe_descrip">
		  Posted by: <%= link_to recipe.user.username, users_show_path(recipe.user) %> <br>
		  <%= recipe.recipe_title %> <br>
		  <img src= "<%= recipe.avatar %>"  height ="85px"/> <br>
		  <%= recipe.ingredients %> <br>
		  <%= recipe.directions %> 
		</div> 
		<% end if @recipes %>
	</div>
</div>


<% if @recipes.blank? %>
  <h4>There are no results containing the term <%= params[:search] %>.</h4>
<% end %>